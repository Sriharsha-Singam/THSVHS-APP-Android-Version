<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="1"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="match_parent"
        android:id="@+id/linearmain">
        <!--android:weightSum="1"-->


        <TextView
            android:id="@+id/usernametxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="New Text"
            android:textColor="@color/white"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="date"
            android:textColor="@color/white"
            android:textStyle="italic" />
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_marginEnd="50dp"-->

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gridViewMessage">

            <creations.appmaking.thsvhsapp.RoundedImageView
                android:id="@+id/pImage"
                android:layout_width="46dp"
                android:layout_height="48dp"
                android:layout_marginRight="@dimen/pad_minus8dp"/>
            <!--android:background="@drawable/circle"-->
            <!--android:background="@drawable/circle"-->
            <!--app:srcCompat="@drawable/img"-->
            <!--app:srcCompat="@drawable/rounded_edittext"-->

            <!--android:layout_width="315dp"-->
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="1162dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_column="1"


                android:layout_marginLeft="@dimen/pad_10dp"
                android:layout_row="0"
                android:background="@drawable/listshape"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/pad_5dp"
                android:paddingLeft="@dimen/pad_15dp"
                android:paddingRight="@dimen/pad_chat_item"
                android:paddingTop="@dimen/pad_5dp"
                android:weightSum="1">

                <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="26dp">-->


                <!--</RelativeLayout>-->

                <TextView
                    android:id="@+id/messagetxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.13"
                    android:enabled="false"
                    android:text="New Text"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Black" />

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="150dp"-->
                <!--android:orientation="vertical"-->
                <!--android:id="@+id/linear2">-->

                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="228dp" />

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="159dp"
                    android:layout_gravity="center_horizontal" />
                <!--</LinearLayout>-->

            </LinearLayout>

            <GridLayout
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ToggleButton
                        android:id="@+id/toggleButton"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_column="14"
                        android:layout_row="0"
                        android:background="@drawable/likenormal" />

                </RelativeLayout>

            </GridLayout>

            <TextView
                android:id="@+id/likeNumber"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

        </GridLayout>

    </LinearLayout>


</RelativeLayout>
